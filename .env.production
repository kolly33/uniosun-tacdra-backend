# Production Environment Configuration for Render
NODE_ENV=production

# Database Configuration (Will be set in Render environment variables)
DB_HOST=${DATABASE_HOST}
DB_PORT=${DATABASE_PORT}
DB_USERNAME=${DATABASE_USERNAME}
DB_PASSWORD=${DATABASE_PASSWORD}
DB_NAME=${DATABASE_NAME}

# JWT Configuration (Will be set in Render environment variables)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Payment Configuration - Remita Production
REMITA_MERCHANT_ID=${REMITA_MERCHANT_ID}
REMITA_SERVICE_TYPE_ID=${REMITA_SERVICE_TYPE_ID}
REMITA_API_KEY=${REMITA_API_KEY}
REMITA_BASE_URL=${REMITA_BASE_URL}

# Application Configuration (Will be set automatically by Render)
APP_URL=${RENDER_EXTERNAL_URL}
FRONTEND_URL=${FRONTEND_URL}

# Render specific
PORT=${PORT}
